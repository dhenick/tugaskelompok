<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Data Survey"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/caption_nik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_nik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789012345"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_nik"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/caption_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_nik"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_nama"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/caption_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_nama"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jalan Raya No. 1"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_alamat"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/caption_propinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propinsi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_alamat"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_propinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jawa Barat"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_propinsi"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/caption_kabupaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kabupaten"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_propinsi"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_kabupaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bandung"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_kabupaten"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/caption_penghasilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penghasilan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_kabupaten"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_penghasilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 5.000.000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_penghasilan"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/caption_jumlah_penghuni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Penghuni"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_penghasilan"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_jumlah_penghuni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_jumlah_penghuni"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/caption_minat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_jumlah_penghuni"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_minat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subsidi Perumahan"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/caption_minat"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/tv_minat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:backgroundTint="@color/colorGrapeFruit"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/btn_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kembali ke Daftar Survey"
            android:backgroundTint="@color/colorMint"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/btn_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:padding="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
